@{
    ViewData["Title"] = "Dangky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Đăng ký tài khoản mới</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="Dangky" asp-controller="CheckOut" asp-area="" method="post">
        <div class="card-body">
            <div class="form-group row">
                <label for="inputTenDn" class="col-sm-2 col-form-label">Tên đăng nhập</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputTenDn" name="TenDn" placeholder="Tên đăng nhập" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputMatKhau" class="col-sm-2 col-form-label">Mật khẩu</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputMatKhau" name="matkhau" placeholder="Mật khẩu" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputTenKh" class="col-sm-2 col-form-label">Tên khách hàng</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputTenKh" name="tenkh" placeholder="Tên khách hàng" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputSdt" class="col-sm-2 col-form-label">Số điện thoại</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputSdt" name="sdt" placeholder="Số điện thoại" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputDiachi" class="col-sm-2 col-form-label">Địa chỉ</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputDiachi" name="diachi" placeholder="Địa chỉ" required>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Đăng ký</button>
            <button type="button" class="btn btn-default float-right">Hủy</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>
