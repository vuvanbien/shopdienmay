@model myshop.Models.TaiKhoan

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">  </div>

    <div class="col-md-6">

        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Thêm mới tài khoản</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="TenDn" class="control-label">Tên đăng nhập</label>
                    <input asp-for="TenDn" class="form-control" />
                    <span asp-validation-for="TenDn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
                    <input asp-for="MatKhau" class="form-control" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TenKh" class="control-label">Tên người dùng</label>
                    <input asp-for="TenKh" class="form-control" />
                    <span asp-validation-for="TenKh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sdt" class="control-label">Số điện thoại</label>
                    <input asp-for="Sdt" class="form-control" />
                    <span asp-validation-for="Sdt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Diachi" class="control-label">Địa chỉ</label>
                    <input asp-for="Diachi" class="form-control" />
                    <span asp-validation-for="Diachi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="MaLoaiTk">Loại tài khoản</label>

                    <select asp-for="MaLoaiTk" class="form-control" asp-items="ViewBag.MaLoaiTk">
                        <option value="" disabled selected>Chọn loại tài khoản</option>
                    </select>
                </div>


                <div class="form-group">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>

                </div>
            </form>
        </div>


    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
