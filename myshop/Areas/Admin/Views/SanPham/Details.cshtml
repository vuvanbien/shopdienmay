@model SanPham

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div>
    <h3 style="text-align:center; font-weight:700">CHI TIẾT SẢN PHẨM</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên sản phẩm:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenSp)
        </dd>
        <dt class="col-sm-2">
            Ảnh:
        </dt>
        <dd class="col-sm-10">
            <p><img src="@Url.Content("~/Images/" + Model.Anh)" alt="@Model.TenSp" width="200" height="200" /></p>
        </dd>
        <table class="table table-bordered">
            <thead style="text-align: center;color: #fff;background-color: #007BFF;border-color: #007BFF;">
                <tr>
                    <th>
                        Giá nhập
                    </th>
                    <th>
                        Giá bán
                    </th>
                    <th>
                        Giá khuyến mại
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @String.Format("{0:#,##0.###}", Model.GiaNhap) ) VND
                    </td>
                    <td>
                        @String.Format("{0:#,##0.###}", Model.GiaBan)  VND
                    </td>
                    <td>
                        @String.Format("{0:#,##0.###}", Model.GiaKm)  VND
                    </td>
                </tr>

            </tbody>
        </table>
        <dt class="col-sm-2">
            Mô tả:
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Mota)
        </dd>

        <dt class="col-sm-2">
            Số lượng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt class="col-sm-2">
            Loại sản phẩm:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaLoaiSpNavigation.TenLoaiSp)
        </dd>
        <dt class="col-sm-2">
            Nhà sản xuất:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaNsxNavigation.TenNsx)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.MaSp">Sửa</a>
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
</div>
<script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
<script>
    $(document).ready(function () {
        CKEDITOR.replace('Mota');
    });
</script>