@model myshop.Models.HoaDon

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div style="margin-left: 30px">
    <h4 style="text-align:center">Chi tiết đơn hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã hóa đơn:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaHd)
        </dd>
        <dt class = "col-sm-2">
           Ngày:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ngay, "{0:dd/MM/yyyy}")
        </dd>
        <dt class = "col-sm-2">
           Lưu ý:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
        <dt class = "col-sm-2">
          Trạng thái:
        </dt>
        <dd class = "col-sm-10">
            @{
                string trangThaiText = "";

                switch (Model.TrangThai)
                {
                    case 1:
                        trangThaiText = "Chờ xác nhận";
                        break;
                    case 2:
                        trangThaiText = "Đang giao";
                        break;
                    case 3:
                        trangThaiText = "Đã giao";
                        break;
                    case 4:
                        trangThaiText = "Đã hủy";
                        break;
                    default:
                        trangThaiText = "Trạng thái không xác định";
                        break;
                }
            }

            @trangThaiText
        </dd>
        <dt class = "col-sm-2">
           Hình thức thanh toán:
        </dt>
        <dd class = "col-sm-10">
            @if (Model.ThanhToan == 0)
            {
                <p>Thanh toán khi nhận hàng</p>
            }
            @if (Model.ThanhToan == 1)
            {
                <p>Thanh toán qua paypal</p>
            }
        </dd>
        <dt class = "col-sm-2">
            Tên người nhận:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenKh)
        </dd>
        <dt class = "col-sm-2">
           Số điện thoại:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class = "col-sm-2">
           Địa chỉ:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class ="col-sm-2">
            Sản phẩm:
        </dt>
        <dd class="col-sm-10">
            @await Component.InvokeAsync("ChiTiet")
        </dd>
        <dt class = "col-sm-2">
           Tổng tiền thanh toán:
        </dt>
        <dd class = "col-sm-10">
            @String.Format("{0:#,##0.###}", Model.TotalPrice) VND
        </dd>
    </dl>
</div>
<div>
    
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
</div>
