@model myshop.Models.NhaSanXuat

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h4 style="text-align:center; font-weight:700">Thay đổi thông tin nhà sản xuất</h4>
<hr />
<div class="row" style="align-content:center; margin-left: 100px">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaNsx" />
            <div class="form-group">
                <label asp-for="TenNsx" class="control-label">Tên nhà sản xuất:</label>
                <input asp-for="TenNsx" class="form-control" />
                <span asp-validation-for="TenNsx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
